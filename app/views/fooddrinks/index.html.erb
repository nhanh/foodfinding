<div class="span9" id="content">
<h3>Foods and Drinks</h3>
<div class="row-fluid">
<!-- block -->
  <div class="block">
    <div class="navbar navbar-inner block-header">
      <div class="muted pull-left">Foods and Drinks Information</div>
    </div>
    <div class="block-content collapse in">
      <div class="span12">
        <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="example">
          <thead>
            <tr>
              <th>Foods and Drinks</th>
              <th>Category</th>
              <th>Restaurant</th>
              <th>Price</th>
              <th>Rate</th>
              <th>Image</th>
              <th>Date Upload</th>
              <th>Type</th>
              <th>Show</th>
              <th>Edit</th>
              <th>Delete</th>
            </tr>
            </thead>
            <tbody>
              <% @fooddrinks.each do |fooddrink|  %>
              <tr>
                <td><%= fooddrink.fdName %></td>
                <td><%= fooddrink.category.cateName %></td>
                <td><%= fooddrink.restaurant_id %></td>
                <td><%= fooddrink.Price %></td>
                <td><%= fooddrink.rateNumber %></td>
                <td><%= fooddrink.fdImage %></td>
                <td><%= fooddrink.dateUpload %></td>
                <td><%= fooddrink.Type == 0 ? "Thuc An" : "Thuc Uong" %></td>
                <td><%= link_to 'Show', fooddrink %></td>
                <td><%= link_to 'Edit', edit_fooddrink_path(fooddrink) %></td>
                <td><%= link_to 'Destroy', fooddrink, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <!-- /block -->
  </div>
  <%= link_to 'New Fooddrink', new_fooddrink_path %>
</div>
<script src="/vendor/jquery-1.9.1.js"></script>
<script src="/vendor/datatables/js/jquery.dataTables.min.js"></script>
