<div class="span9" id="content">
<h3>Restaurants</h3>
<div class="row-fluid">
<!-- block -->
  <div class="block">
    <div class="navbar navbar-inner block-header">
      <div class="muted pull-left">Restaurants Information</div>
    </div>
    <div class="block-content collapse in">
      <div class="span12">
        <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="example">
          <thead>
            <tr>
              <th>Restname</th>
              <th>Ratenumber</th>
              <th>Restimage</th>
              <th>Resttype</th>
              <th>Address</th>
              <th>District</th>
              <th>Longitude</th>
              <th>Latitude</th>
              <th>Show</th>
              <th>Edit</th>
              <th>Delete</th>
            </tr>
            </thead>
            <tbody>
              <% @restaurants.each do |restaurant| %>
              <tr>
                <td><%= restaurant.restName %></td>
                <td><%= restaurant.rateNumber %></td>
                <td><%= restaurant.restImage %></td>
                <td><%= restaurant.restType==0 ? "Nha Hang Thuc An" : "Nha Hang Thuc Uong" %></td>
                <td><%= restaurant.Address %></td>
                <td><%= restaurant.district.districtName %></td>
                <td><%= restaurant.Longitude %></td>
                <td><%= restaurant.Latitude %></td>
                <td><%= link_to 'Show', restaurant %></td>
                <td><%= link_to 'Edit', edit_restaurant_path(restaurant) %></td>
                <td><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <!-- /block -->
  </div>
  <%= link_to 'New Restaurant', new_restaurant_path %>
</div>
<script src="/vendor/jquery-1.9.1.js"></script>
<script src="/vendor/datatables/js/jquery.dataTables.min.js"></script>
