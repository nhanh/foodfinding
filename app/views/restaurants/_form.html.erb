<%= form_for(@restaurant) do |f| %>
  <% if @restaurant.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@restaurant.errors.count, "error") %> prohibited this restaurant from being saved:</h2>

      <ul>
      <% @restaurant.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :restName %><br />
    <%= f.text_field :restName %>
  </div>
  <div class="field">
    <%= f.label :rateNumber %><br />
    <%= f.text_field :rateNumber %>
  </div>
  <div class="field">
    <%= f.label :restImage %><br />
    <%= f.text_area :restImage %>
  </div>
  <div class="field">
    <%= f.label :restType %><br />
    <%= f.select :restType, options_for_select([["Nha Hang Thuc An", "0"], ["Nha Hang Thuc Uong", "1"]]) %>
  </div>
  <div class="field">
    <%= f.label :Address %><br />
    <%= f.text_field :Address %>
  </div>
  <div class="field">
    <%= f.label :district_id %><br />
    <%= f.select :district_id, options_for_select(District.all.collect{|d| [d.districtName, d.id]}) %>
  </div>
  <div class="field">
    <%= f.label :Longitude %><br />
    <%= f.text_field :Longitude %>
  </div>
  <div class="field">
    <%= f.label :Latitude %><br />
    <%= f.text_field :Latitude %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
